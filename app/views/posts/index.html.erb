<h1>AjaxApp</h1>
<%= form_with url "/posts", method: :post, id: "form" do |foem| %>
  <%= form.text_field :content %>
  <%= form.submit '投稿する', id: "submit" %>
<% end %>

<div id="list">
</div>

<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      <%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>